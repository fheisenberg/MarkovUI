<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Toolbar superior -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#074E99"
        app:popupTheme="@style/ToolbarPopupTheme"
        android:theme="@style/ToolbarPopupTheme"
        android:title="@string/app_name"
        android:titleTextColor="@android:color/white" />

    <!-- Contenido principal -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="#FAFAFA">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bienvenido_a_mirutina"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="12dp"
                android:textColor="#333"/>

            <!-- Card Inicio -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#E3F2FD"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#E3F2FD"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/start_card_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#0D47A1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/consulta_tu_resumen_diario_y_clima_actual"
                    android:textColor="#333"
                    android:paddingTop="4dp"/>

                <Button
                    android:id="@+id/btnHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:textColor="#FFFFFF"
                    android:text="@string/start_card_button"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Card Perfil -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#E8F5E9"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/perfil"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1B5E20" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/revisa_tus_h_bitos_y_progreso_personal"
                    android:textColor="#333"
                    android:paddingTop="4dp"/>

                <Button
                    android:id="@+id/btnProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:textColor="#FFFFFF"
                    android:text="@string/perfil"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Card ConfiguraciÃ³n -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#FFF3E0"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_card_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#E65100" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ajusta_tus_preferencias_y_recordatorios"
                    android:textColor="#333"
                    android:paddingTop="4dp"/>

                <Button
                    android:id="@+id/btnSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:textColor="#FFFFFF"
                    android:text="@string/settings_card_title"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>