<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido a MiRutina!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            android:textColor="#333"/>

        <!-- Card Inicio -->
        <LinearLayout
            android:orientation="vertical"
            android:background="#E3F2FD"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#E3F2FD"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0D47A1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consulta tu resumen diario y clima actual."
                android:textColor="#333"
                android:paddingTop="4dp"/>

            <Button
                android:id="@+id/btnHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ir a Inicio"
                android:layout_gravity="end"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Card Perfil -->
        <LinearLayout
            android:orientation="vertical"
            android:background="#E8F5E9"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1B5E20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Revisa tus hábitos y progreso personal."
                android:textColor="#333"
                android:paddingTop="4dp"/>

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Perfil"
                android:layout_gravity="end"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Card Configuración -->
        <LinearLayout
            android:orientation="vertical"
            android:background="#FFF3E0"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configuración"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E65100" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajusta tus preferencias y recordatorios."
                android:textColor="#333"
                android:paddingTop="4dp"/>

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abrir Configuración"
                android:layout_gravity="end"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
